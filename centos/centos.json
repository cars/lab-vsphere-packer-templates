{
  "_comment": "Build with `packer build centos.json`",
  "builders": [
    {
      "type": "vsphere-iso",
      "boot_command": [
        "<up><wait><tab> text ks=http://{{ user `cHTTPIP`}}:{{ user `cHTTPPORT`}}/{{ user `kickstart` }}<enter>"
      ],
      "vcenter_server": "{{user `vcenter_server`}}",
      "username": "{{user `vcenter_user`}}",
      "password": "{{user `vcenter_password`}}",
      "datacenter": "{{user `vcenter_datacenter`}}",
      "insecure_connection": "true",
      "vm_name": "{{user `vcenter_template_name`}}",
      "folder": "{{user `vcenter_folder`}}",
      "cluster": "{{user `vcenter_cluster`}}",
      "host": "{{user `vcenter_host`}}",
      "datastore": "{{user `vcenter_datastore`}}",
      "network": "{{user `vcenter_network`}}",
      "guest_os_type": "rhel7_64Guest",
      "communicator": "ssh",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "CPUs": 2,
      "RAM": 8192,
      "RAM_reserve_all": true,
      "disk_controller_type": "pvscsi",
      "disk_size": 65536,
      "disk_thin_provisioned": true,
      "network_card": "vmxnet3",
      "notes" : "{{user `vm_notes`}}",
      "convert_to_template": "true",
      "iso_paths": [
        "[F] Linuxes/CentOS/CentOS-7-x86_64-DVD-1810.iso",
        "[] /usr/lib/vmware/isoimages/linux.iso"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "manifest"
    }
  ],
  "provisioners": [
    {
      "environment_vars": [
        "CLEANUP_BUILD_TOOLS={{user `cleanup_build_tools`}}",
        "DESKTOP={{user `desktop`}}",
        "UPDATE={{user `update`}}",
        "INSTALL_VAGRANT_KEY={{user `install_vagrant_key`}}",
        "SSH_USERNAME={{user `ssh_username`}}",
        "SSH_PASSWORD={{user `ssh_password`}}",
        "http_proxy={{user `http_proxy`}}",
        "https_proxy={{user `https_proxy`}}",
        "ftp_proxy={{user `ftp_proxy`}}",
        "rsync_proxy={{user `rsync_proxy`}}",
        "no_proxy={{user `no_proxy`}}"
      ],
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
      "scripts": [
        "script/update.sh"
      ],
      "type": "shell",
      "expect_disconnect": "true"
    },
    {
      "environment_vars": [
        "CLEANUP_BUILD_TOOLS={{user `cleanup_build_tools`}}",
        "DESKTOP={{user `desktop`}}",
        "UPDATE={{user `update`}}",
        "INSTALL_VAGRANT_KEY={{user `install_vagrant_key`}}",
        "SSH_USERNAME={{user `ssh_username`}}",
